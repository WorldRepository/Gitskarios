<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textTitle"
        android:textSize="@dimen/textSizeMedium"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/gapLarge"
        android:layout_marginStart="@dimen/gapLarge"
        android:layout_marginTop="@dimen/gapMedium"
        android:layout_marginBottom="@dimen/gapMedium"
        android:layout_toLeftOf="@+id/textNum"
        android:layout_toStartOf="@+id/textNum"
        android:layout_marginRight="@dimen/gapMedium"
        android:layout_marginEnd="@dimen/gapMedium"
        android:ellipsize="end"
        android:singleLine="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textNum"
        android:textSize="@dimen/textSizeMedium"
        android:layout_alignTop="@+id/textTitle"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="@dimen/gapMedium"
        android:layout_marginEnd="@dimen/gapMedium" />

    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:id="@id/avatarAuthor"
        android:layout_alignTop="@+id/textAuthor"
        android:layout_alignLeft="@+id/textTitle"
        android:layout_alignStart="@+id/textTitle"
        android:layout_marginBottom="@dimen/gapLarge"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textAuthor"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/gapMedium"
        android:layout_marginStart="@dimen/gapMedium"
        android:layout_below="@+id/textTitle"
        android:layout_toRightOf="@id/avatarAuthor"
        android:layout_toEndOf="@id/avatarAuthor"
        android:layout_alignRight="@+id/textTitle"
        android:layout_alignEnd="@+id/textTitle" />

    <View
        android:layout_width="@dimen/gapSmall"
        android:layout_height="wrap_content"
        android:id="@+id/state"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/textAuthor" />

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/pullRequest"
        android:layout_below="@+id/textNum"
        android:layout_alignRight="@+id/textNum"
        android:layout_alignEnd="@+id/textNum"
        android:layout_marginTop="@dimen/gapLarge" />


</RelativeLayout>