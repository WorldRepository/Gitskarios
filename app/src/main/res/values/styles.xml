<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="AppTheme.Repos">
        <item name="colorPrimary">@color/repos_primary</item>
        <item name="colorPrimaryDark">@color/repos_primary_dark</item>
        <item name="colorAccent">@color/repos_accent</item>
        <item name="gitskarios_divider">@color/repos_divider</item>
        <item name="gitskarios_primary_text">@color/repos_primary_text</item>
        <item name="gitskarios_secondary_text">@color/repos_secondary_text</item>
        <item name="gitskarios_primary_light">@color/repos_primary_light</item>
        <item name="gitskarios_icons">@color/repos_icons</item>
    </style>
    <style name="AppTheme.Gists">
        <item name="colorPrimary">@color/gists_primary</item>
        <item name="colorPrimaryDark">@color/gists_primary_dark</item>
        <item name="colorAccent">@color/gists_accent</item>
        <item name="gitskarios_divider">@color/gists_divider</item>
        <item name="gitskarios_primary_text">@color/gists_primary_text</item>
        <item name="gitskarios_secondary_text">@color/gists_secondary_text</item>
        <item name="gitskarios_primary_light">@color/gists_primary_light</item>
        <item name="gitskarios_icons">@color/gists_icons</item>
    </style>

    <style name="AppTheme.Login">
        <item name="android:windowBackground">@color/repos_primary</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/white</item>
    </style>

    <style name="fab">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/fab_button</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:layout_gravity">right|bottom</item>
    </style>

    <style name="card_row_item_text">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="user_row_item">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">15sp</item>
    </style>
    
    <style name="SpotDialog" parent="android:Theme.DeviceDefault.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">@string/acces_token_request</item>
        <item name="DialogSpotColor">?colorAccent</item>
        <item name="DialogSpotCount">4</item>
    </style>
    
</resources>
